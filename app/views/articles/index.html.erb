<h1>Listing all Scores</h1>

<table class="table table-hover">
    <tr>
        <th>Score</th>
        <th>Comment</th>
        <th>Created At:</th>
        <th>Last Updated:</th>
         
    </tr>
    
    <% @articles.each do |a| %>
        <tr>
            <td>
                <%= a.score %>
            </td>
            <td>
                <%= a.comment %>
            </td>
            <td>
                <%= time_ago_in_words(a.created_at) %> ago
            </td>
            <td>
                <%= time_ago_in_words(a.updated_at) %> ago
            </td>
            <td><%= link_to "Edit", edit_article_path(a) %></td>
            <td><%= link_to "Show", article_path(a) %></td>
            <td><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>