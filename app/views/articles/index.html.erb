<h1>Listing all articles</h1>
<p><%= link_to "New Score", new_article_path %></p>
<table>
    <tr>
        <th>Score</th>
        <th>Comment</th>
    </tr>
    
    <% @articles.each do |a| %>
        <tr>
            <td>
                <%= a.score %>
            </td>
            <td>
                <%= a.comment %>
            </td>
            <td><%= link_to "Edit", edit_article_path(a) %></td>
            <td><%= link_to "Show", article_path(a) %></td>
            <td><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>