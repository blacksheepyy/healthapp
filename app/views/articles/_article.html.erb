<table class="table table-hover">
    <tr>
        <th>Score</th>
        <th>Comment</th>
        <th>Created At:</th>
        <th>Created by:</th>
         
    </tr>
    
    <% obj.each do |a| %>
        <tr>
            <td>
                <%= a.score %>
            </td>
            <td>
                <%= a.comment %>
            </td>
            <td>
                <%= time_ago_in_words(a.created_at) %> ago
            </td>
            <td>
                <%= a.user.username %>
            </td>
            <td><%= link_to "Show", article_path(a) %></td>
            <% if logged_in? && (current_user == a.user) %>
                <td><%= link_to "Edit", edit_article_path(a) %></td>
                
                <td><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td>
            <% end %>
        </tr>
    <% end %>
</table>